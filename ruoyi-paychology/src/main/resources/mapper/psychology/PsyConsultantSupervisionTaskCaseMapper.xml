<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renxin.psychology.mapper.PsyConsultantSupervisionTaskCaseMapper">
    
    <resultMap type="PsyConsultantSupervisionTaskCase" id="PsyConsultantSupervisionTaskCaseResult">
        <result property="taskId"    column="task_id"    />
        <result property="userId"    column="user_id"    />
    </resultMap>

    <sql id="selectPsyConsultantSupervisionTaskCaseVo">
        select task_id, user_id from psy_consultant_supervision_task_case
    </sql>

    <select id="selectPsyConsultantSupervisionTaskCaseList" parameterType="PsyConsultantSupervisionTaskCase" resultMap="PsyConsultantSupervisionTaskCaseResult">
        <include refid="selectPsyConsultantSupervisionTaskCaseVo"/>
        <where>  
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectPsyConsultantSupervisionTaskCaseByTaskId" parameterType="Long" resultMap="PsyConsultantSupervisionTaskCaseResult">
        <include refid="selectPsyConsultantSupervisionTaskCaseVo"/>
        where task_id = #{taskId}
    </select>
        
    <insert id="insertPsyConsultantSupervisionTaskCase" parameterType="PsyConsultantSupervisionTaskCase">
        insert into psy_consultant_supervision_task_case
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null">task_id,</if>
            <if test="userId != null">user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null">#{taskId},</if>
            <if test="userId != null">#{userId},</if>
         </trim>
    </insert>

    <update id="updatePsyConsultantSupervisionTaskCase" parameterType="PsyConsultantSupervisionTaskCase">
        update psy_consultant_supervision_task_case
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
        </trim>
        where task_id = #{taskId}
    </update>

    <delete id="deletePsyConsultantSupervisionTaskCaseByTaskId" parameterType="Long">
        delete from psy_consultant_supervision_task_case where task_id = #{taskId}
    </delete>

    <delete id="deletePsyConsultantSupervisionTaskCaseByTaskIds" parameterType="String">
        delete from psy_consultant_supervision_task_case where task_id in 
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </delete>
</mapper>