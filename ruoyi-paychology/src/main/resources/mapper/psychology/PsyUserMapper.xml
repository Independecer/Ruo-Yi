<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.psychology.mapper.PsyUserMapper">
    
    <resultMap type="PsyUser" id="PsyUserResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="phone"    column="phone"    />
        <result property="avatar"    column="avatar"    />
        <result property="status"    column="status"    />
        <result property="wxOpenid"    column="wx_openid"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectPsyUserVo">
        select id, name, phone, avatar, status, wx_openid, create_time from psy_user
    </sql>

    <select id="selectPsyUserList" parameterType="PsyUser" resultMap="PsyUserResult">
        <include refid="selectPsyUserVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="avatar != null  and avatar != ''"> and avatar = #{avatar}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="wxOpenid != null  and wxOpenid != ''"> and wx_openid = #{wxOpenid}</if>
        </where>
    </select>
    
    <select id="selectPsyUserById" parameterType="String" resultMap="PsyUserResult">
        <include refid="selectPsyUserVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPsyUser" parameterType="PsyUser">
        insert into psy_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="phone != null">phone,</if>
            <if test="avatar != null">avatar,</if>
            <if test="status != null">status,</if>
            <if test="wxOpenid != null">wx_openid,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="status != null">#{status},</if>
            <if test="wxOpenid != null">#{wxOpenid},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updatePsyUser" parameterType="PsyUser">
        update psy_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="status != null">status = #{status},</if>
            <if test="wxOpenid != null">wx_openid = #{wxOpenid},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePsyUserById" parameterType="String">
        delete from psy_user where id = #{id}
    </delete>

    <delete id="deletePsyUserByIds" parameterType="String">
        delete from psy_user where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>