<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onethinker.bk.mapper.SortMapper">

    <resultMap type="Sort" id="SortResult">
        <result property="id" column="id"/>
        <result property="sortName" column="sort_name"/>
        <result property="sortDescription" column="sort_description"/>
        <result property="sortType" column="sort_type"/>
        <result property="priority" column="priority"/>
    </resultMap>

    <sql id="selectSortVo">
        select id, sort_name, sort_description, sort_type, priority
        from bk_sort
    </sql>

    <select id="selectSortList" parameterType="Sort" resultMap="SortResult">
        <include refid="selectSortVo"/>
        <where>
            <if test="sortName != null  and sortName != ''">
                and sort_name like concat('%', #{sortName}, '%')
            </if>
            <if test="sortDescription != null  and sortDescription != ''">
                and sort_description = #{sortDescription}
            </if>
            <if test="sortType != null ">
                and sort_type = #{sortType}
            </if>
            <if test="priority != null ">
                and priority = #{priority}
            </if>
        </where>
    </select>

    <select id="selectSortById" parameterType="Long"
            resultMap="SortResult">
        <include refid="selectSortVo"/>
        where id = #{id}
    </select>

    <insert id="insertSort" parameterType="Sort" useGeneratedKeys="true"
            keyProperty="id">
        insert into bk_sort
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sortName != null and sortName != ''">sort_name,
            </if>
            <if test="sortDescription != null and sortDescription != ''">sort_description,
            </if>
            <if test="sortType != null">sort_type,
            </if>
            <if test="priority != null">priority,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sortName != null and sortName != ''">#{sortName},
            </if>
            <if test="sortDescription != null and sortDescription != ''">#{sortDescription},
            </if>
            <if test="sortType != null">#{sortType},
            </if>
            <if test="priority != null">#{priority},
            </if>
        </trim>
    </insert>

    <update id="updateSort" parameterType="Sort">
        update bk_sort
        <trim prefix="SET" suffixOverrides=",">
            <if test="sortName != null and sortName != ''">sort_name =
                #{sortName},
            </if>
            <if test="sortDescription != null and sortDescription != ''">sort_description =
                #{sortDescription},
            </if>
            <if test="sortType != null">sort_type =
                #{sortType},
            </if>
            <if test="priority != null">priority =
                #{priority},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSortById" parameterType="Long">
        delete
        from bk_sort
        where id = #{id}
    </delete>

    <delete id="deleteSortByIds" parameterType="String">
        delete from bk_sort where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
