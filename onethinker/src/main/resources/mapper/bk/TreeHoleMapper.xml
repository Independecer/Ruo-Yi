<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.bk.mapper.TreeHoleMapper">

    <resultMap type="TreeHole" id="TreeHoleResult">
            <result property="id" column="id"/>
            <result property="avatar" column="avatar"/>
            <result property="message" column="message"/>
            <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectTreeHoleVo">
        select id, avatar, message, create_time
        from bk_tree_hole
    </sql>

    <select id="selectTreeHoleList" parameterType="TreeHole" resultMap="TreeHoleResult">
        <include refid="selectTreeHoleVo"/>
        <where>
                        <if test="avatar != null  and avatar != ''">
                            and avatar = #{avatar}
                        </if>
                        <if test="message != null  and message != ''">
                            and message = #{message}
                        </if>
        </where>
    </select>

    <select id="selectTreeHoleById" parameterType="Long"
            resultMap="TreeHoleResult">
            <include refid="selectTreeHoleVo"/>
            where id = #{id}
    </select>

    <insert id="insertTreeHole" parameterType="TreeHole" useGeneratedKeys="true"
            keyProperty="id">
        insert into bk_tree_hole
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="avatar != null">avatar,
                    </if>
                    <if test="message != null and message != ''">message,
                    </if>
                    <if test="createTime != null">create_time,
                    </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="avatar != null">#{avatar},
                    </if>
                    <if test="message != null and message != ''">#{message},
                    </if>
                    <if test="createTime != null">#{createTime},
                    </if>
        </trim>
    </insert>

    <update id="updateTreeHole" parameterType="TreeHole">
        update bk_tree_hole
        <trim prefix="SET" suffixOverrides=",">
                    <if test="avatar != null">avatar =
                        #{avatar},
                    </if>
                    <if test="message != null and message != ''">message =
                        #{message},
                    </if>
                    <if test="createTime != null">create_time =
                        #{createTime},
                    </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTreeHoleById" parameterType="Long">
        delete from bk_tree_hole where id = #{id}
    </delete>

    <delete id="deleteTreeHoleByIds" parameterType="String">
        delete from bk_tree_hole where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>