<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.onethinker.mapper.ActivityTypeMapper">

    <resultMap type="ActivityType" id="ActivityTypeResult">
            <result property="id" column="id"/>
            <result property="enabled" column="enabled"/>
            <result property="name" column="name"/>
    </resultMap>

    <sql id="selectActivityTypeVo">
        select id, enabled, name
        from t_activity_type
    </sql>

    <select id="selectActivityTypeList" parameterType="ActivityType" resultMap="ActivityTypeResult">
        <include refid="selectActivityTypeVo"/>
        <where>
                        <if test="enabled != null ">
                            and enabled = #{enabled}
                        </if>
                        <if test="name != null  and name != ''">
                            and name like concat('%', #{name}, '%')
                        </if>
        </where>
    </select>

    <select id="selectActivityTypeById" parameterType="Long"
            resultMap="ActivityTypeResult">
            <include refid="selectActivityTypeVo"/>
            where id = #{id}
    </select>

    <insert id="insertActivityType" parameterType="ActivityType" useGeneratedKeys="true"
            keyProperty="id">
        insert into t_activity_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="enabled != null">enabled,
                    </if>
                    <if test="name != null and name != ''">name,
                    </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="enabled != null">#{enabled},
                    </if>
                    <if test="name != null and name != ''">#{name},
                    </if>
        </trim>
    </insert>

    <update id="updateActivityType" parameterType="ActivityType">
        update t_activity_type
        <trim prefix="SET" suffixOverrides=",">
                    <if test="enabled != null">enabled =
                        #{enabled},
                    </if>
                    <if test="name != null and name != ''">name =
                        #{name},
                    </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteActivityTypeById" parameterType="Long">
        delete from t_activity_type where id = #{id}
    </delete>

    <delete id="deleteActivityTypeByIds" parameterType="String">
        delete from t_activity_type where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>