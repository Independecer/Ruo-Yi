    <sql id="selectBusOrderAssignmentsVo">
        select assignment_id, order_id, user_id, accepted_at, status, created_at, updated_at from bus_order_assignments
    </sql>

    <select id="selectBusOrderAssignmentsList" parameterType="BusOrderAssignments" resultMap="BusOrderAssignmentsResult">
        <include refid="selectBusOrderAssignmentsVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="acceptedAt != null "> and accepted_at = #{acceptedAt}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>
    
    <select id="selectBusOrderAssignmentsByAssignmentId" parameterType="Long" resultMap="BusOrderAssignmentsResult">
        <include refid="selectBusOrderAssignmentsVo"/>
        where assignment_id = #{assignmentId}
    </select>

    <insert id="insertBusOrderAssignments" parameterType="BusOrderAssignments" useGeneratedKeys="true" keyProperty="assignmentId">
        insert into bus_order_assignments
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="acceptedAt != null">accepted_at,</if>
            <if test="status != null">status,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="acceptedAt != null">#{acceptedAt},</if>
            <if test="status != null">#{status},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
         </trim>
    </insert>

    <update id="updateBusOrderAssignments" parameterType="BusOrderAssignments">
        update bus_order_assignments
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="acceptedAt != null">accepted_at = #{acceptedAt},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where assignment_id = #{assignmentId}
    </update>

    <delete id="deleteBusOrderAssignmentsByAssignmentId" parameterType="Long">
        delete from bus_order_assignments where assignment_id = #{assignmentId}
    </delete>

    <delete id="deleteBusOrderAssignmentsByAssignmentIds" parameterType="String">
        delete from bus_order_assignments where assignment_id in 
        <foreach item="assignmentId" collection="array" open="(" separator="," close=")">
            #{assignmentId}
        </foreach>
    </delete>
