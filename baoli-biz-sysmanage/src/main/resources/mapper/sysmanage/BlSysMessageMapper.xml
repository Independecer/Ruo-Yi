<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baoli.sysmanage.mapper.BlSysMessageMapper">
    
    <resultMap type="BlSysMessage" id="BlSysMessageResult">
        <result property="id"    column="id"    />
        <result property="messageTitle"    column="message_title"    />
        <result property="messageType"    column="message_type"    />
        <result property="receiverId"    column="receiver_id"    />
        <result property="senderId"    column="sender_id"    />
        <result property="sendTime"    column="send_time"    />
        <result property="messageContent"    column="message_content"    />
        <result property="isRead"    column="is_read"    />
    </resultMap>

    <sql id="selectBlSysMessageVo">
        select id, message_title, message_type, receiver_id, sender_id, send_time, message_content, is_read from bl_sys_message
    </sql>

    <select id="selectBlSysMessageList" parameterType="BlSysMessage" resultMap="BlSysMessageResult">
        <include refid="selectBlSysMessageVo"/>
        <where>  
            <if test="messageTitle != null  and messageTitle != ''"> and message_title = #{messageTitle}</if>
            <if test="messageType != null  and messageType != ''"> and message_type = #{messageType}</if>
            <if test="receiverId != null "> and receiver_id = #{receiverId}</if>
            <if test="senderId != null "> and sender_id = #{senderId}</if>
            <if test="sendTime != null "> and send_time = #{sendTime}</if>
            <if test="messageContent != null  and messageContent != ''"> and message_content = #{messageContent}</if>
            <if test="isRead != null  and isRead != ''"> and is_read = #{isRead}</if>
        </where>
    </select>
    
    <select id="selectBlSysMessageById" parameterType="Long" resultMap="BlSysMessageResult">
        <include refid="selectBlSysMessageVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBlSysMessage" parameterType="BlSysMessage" useGeneratedKeys="true" keyProperty="id">
        insert into bl_sys_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="messageTitle != null">message_title,</if>
            <if test="messageType != null">message_type,</if>
            <if test="receiverId != null">receiver_id,</if>
            <if test="senderId != null">sender_id,</if>
            <if test="sendTime != null">send_time,</if>
            <if test="messageContent != null">message_content,</if>
            <if test="isRead != null">is_read,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="messageTitle != null">#{messageTitle},</if>
            <if test="messageType != null">#{messageType},</if>
            <if test="receiverId != null">#{receiverId},</if>
            <if test="senderId != null">#{senderId},</if>
            <if test="sendTime != null">#{sendTime},</if>
            <if test="messageContent != null">#{messageContent},</if>
            <if test="isRead != null">#{isRead},</if>
         </trim>
    </insert>

    <update id="updateBlSysMessage" parameterType="BlSysMessage">
        update bl_sys_message
        <trim prefix="SET" suffixOverrides=",">
            <if test="messageTitle != null">message_title = #{messageTitle},</if>
            <if test="messageType != null">message_type = #{messageType},</if>
            <if test="receiverId != null">receiver_id = #{receiverId},</if>
            <if test="senderId != null">sender_id = #{senderId},</if>
            <if test="sendTime != null">send_time = #{sendTime},</if>
            <if test="messageContent != null">message_content = #{messageContent},</if>
            <if test="isRead != null">is_read = #{isRead},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBlSysMessageById" parameterType="Long">
        delete from bl_sys_message where id = #{id}
    </delete>

    <delete id="deleteBlSysMessageByIds" parameterType="String">
        delete from bl_sys_message where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>